<div if(input.alert) style="width: 100%; z-index: 10000; position: absolute; top: 0; left: 0; padding: 40px;">
    <div class="alert alert-${input.alert.type ? input.alert.type : 'warning'} alert-dismissible fade show" role="alert" style="width: auto">
        ${input.alert.text ? input.alert.text : input.alert}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" onclick="window.location.search = ''">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>